@import 'includes/variables';

$grid-row-gap = 50px;

#experiment-content {
    display: grid;
    grid-row-gap: $grid-row-gap;
}

#experiment-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-column-gap: $grid-column-gap-on-experiment-page;
    grid-row-gap: 10px;
    grid-template-areas:
        "top top"\
        "bottom-left bottom-right";
}

#experiment-description {
    grid-area: top;
}

#experiment-counts {
    grid-area: bottom-left;
}

#experiment-authors {
    grid-area: bottom-right;

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;

        display: grid;
        grid-gap: 20px;

        /* https://bitsofco.de/how-the-minmax-function-works/amp/#usingtheminmaxfunctionresponsivedesignwithoutmediaqueries */
        grid-template-columns: repeat(auto-fit, 100px); /* 100px = width of image */

        justify-content: space-between;
    }

    span {
        text-align: center;
    }

    a {
        display: inline-grid;
        grid-row-gap: 10px;
        justify-items: center;

        text-decoration: none;
        color: #000;
    }
}

#experiment-metrics {
    display: grid;
    grid-row-gap: $grid-row-gap;
}

/* Intentionally hidden. Add value semantically, but not visually. */
#experiment-details h3,
#experiment-metrics h3 {
    display: none;
}

#experiment-counts {
    $vertical-spacing = 1rem;

    h4 {
        margin-bottom: $vertical-spacing;
    }

    h5 {
        margin-bottom: 0;
    }

    dl {
        display: grid;
        grid-gap: 20px;
        grid-template-columns: repeat(4, 1fr);

        font-size: .75em;
        margin: $vertical-spacing 0;
    }
}

aside.inline {
    text-align: right;
}
