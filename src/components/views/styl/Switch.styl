@import 'includes/variables';

.switch-wrapper {
    display: inline-block;
}

.switch-content {
    align-self: center;
    display: flex;
    font-size: 12px;
    justify-content: space-between;
    line-height: 22px;
    cursor: pointer;

    .handle {
        background-image: linear-gradient(-180deg, #FAFAFA 0%, #EFF1F4 100%);
        border-radius: 30px;
        border: 0.5px solid rgba(0,0,0,0.3);
        box-shadow: 0 3px 8px 0 rgba(0,0,0,0.10), inset 0 1px 0 1px #fff;
        height: 20px;
        left: 0;
        position: absolute;
        top: 0.5px;
        transition: left 0.2s ease;
        width: 20px;
    }
}

.switch {
    background: rgba(0,0,0,0.50);
    border-radius: 11px;
    box-shadow: inset 0 1px 5px 0 rgba(0,0,0,0.2);
    height: 22px;
    margin: 0 7px;
    position: relative;
    width: 40px;

    &.active {
        background-image: linear-gradient(-179deg, #B8D380 0%, #93AC67 100%);
        box-shadow: inset 0 1px 4px 0 rgba(0,0,0,0.46);

        .handle {
            left: 20px;
        }
        &::after {
            content: "";
            height: 4px;
            width: 8px;
            border-left: 2px solid white;
            border-bottom: 2px solid white;
            position: absolute;
            transform: rotate(-45deg);
            top: 7px;
            left: 7px;
        }
    }
}
